<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <title>Quản lý</title>

</head>

<body>
    <div class="container">
        <dialog class="w-50" id="dialogNewUser">
            <form class="w-100" method="POST" enctype="multipart/form-data" action="/api/addUser">
                <div class="row d-flex justify-content-center">
                    <div class="col-4 input-group mb-3">
                        <span class="input-group-text w-20" id="basic-addon3">Email</span>
                        <input type="email" class="form-control" name="email" placeholder="" required />
                    </div>
                </div>
                <div class="row d-flex mt-3 justify-content-center">
                    <div class="col-4 input-group mb-3">
                        <span class="input-group-text w-20" id="basic-addon3">Họ và tên</span>
                        <input type="text" class="form-control" name="hoTen" placeholder="" required />
                    </div>
                </div>
                <div class="row mt-3 d-flex justify-content-center">
                    <div class="col-4 input-group mb-3 ">
                        <span class="input-group-text w-20" id="basic-addon3">Mật khẩu</span>
                        <input type="password" class="form-control" name="pass" placeholder="" required />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-4 input-group mb-3">
                        <input type="file" name="myFile" accept="image/*" class="form-control w-20" required />
                    </div>
                </div>

                <div class="row d-flex justify-content-center mt-3">
                    <div class="col-1">
                        <a class="btn btn-warning text-light fw-bold" href="/admin/quanly">Hủy</a>
                    </div>
                    <div class="col-4 "><button type="submit" class="btn btn-warning text-light fw-bold">Thêm
                            người dùng mới</button>
                    </div>
                </div>
            </form>
        </dialog>
        <dialog id="deleteUser">
            <div class="row">Bạn có muốn xóa người dùng này?</div>
            <div class="row">
                <div class="col-4"><a class="btn btn-warning text-light fw-bold" href="/admin/quanly">Không</a></div>
                <div class="col-4"><button class="btn btn-warning text-light fw-bold" onclick="deleteUser()">Có</button>
                </div>
            </div>
        </dialog>
        <dialog class="w-50" id="dialogUpdateUser">
            <form class="w-100" method="POST" id="form_update" enctype="multipart/form-data" action="/api/updateUser">
                <div class="row d-flex justify-content-center">
                    <div class="col-4 input-group mb-3">
                        <span class="input-group-text w-20" id="basic-addon3">Email</span>
                        <input type="email" class="form-control" id="email" name="email" placeholder="" required />
                    </div>
                </div>
                <div class="row d-flex mt-3 justify-content-center">
                    <div class="col-4 input-group mb-3">
                        <span class="input-group-text w-20" id="basic-addon3">Họ và tên</span>
                        <input type="text" class="form-control" id="fullname" name="hoTen" placeholder="" required />
                    </div>
                </div>
                <div class="row d-flex mt-3 justify-content-center">
                    <div class="col-4 input-group mb-3">
                        <span class="input-group-text w-20" id="basic-addon3">Chức vụ</span>
                        <select id="role" name="role" class="form-select">
                            <option value="user">user</option>
                            <option value="admin">admin</option>
                        </select>
                    </div>
                </div>

                <div class="row mt-3 d-flex justify-content-center">
                    <div class="col-4 input-group mb-3 ">
                        <span class="input-group-text w-20" id="basic-addon3">Mật khẩu</span>
                        <input type="password" class="form-control" name="pass" placeholder="" required />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-4 input-group mb-3">
                        <input type="file" name="myFile" accept="image/*" class="form-control w-20" required />
                    </div>
                </div>

                <div class="row d-flex justify-content-center mt-3">
                    <div class="col-1">
                        <a class="btn btn-warning text-light fw-bold" href="/admin/quanly">Hủy</a>
                    </div>
                    <div class="col-4 "><button type="submit" class="btn btn-warning text-light fw-bold">Update
                            người dùng </button>
                    </div>
                </div>
            </form>
        </dialog>
        <div class="d-flex justify-content-between mt-3">
            <a class="fw-bold text-decoration-none text-black me-3 size-26 h3" href="/admin/quanly">Quản lý bán hàng</a>
            <a class="fw-bold text-decoration-none text-black me-3" href="/logout">Đăng xuất</a>
        </div>
        <nav>
            <div class="nav nav-tabs mt-3" id="nav-tab" role="tablist">

                <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home"
                    type="button" role="tab" aria-controls="nav-home" aria-selected="true">User</button>
                <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile"
                    type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Product</button>
                <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact"
                    type="button" role="tab" aria-controls="nav-contact" aria-selected="false">Profile</button>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                <div class="container">
                    <button onclick="newUser()">Thêm người dùng mới</button>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Email</th>
                                <th>Name</th>
                                <th>Avatar</th>
                                <th>Role</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr>
                                <td>{{_id}}</td>
                                <td>{{email}}</td>
                                <td>{{fullName}}</td>
                                <td><img style="width: 50px; height: 50px;"
                                        src="data:{{avatar.contentType}};charset=utf-8;base64,{{avatar.data}}" alt="">
                                </td>
                                <td>{{role}}</td>
                                <td><button onclick="updateUser(`{{_id}}`,`{{email}}`,`{{fullName}}`,`{{role}}`)"
                                        class="btn btn-info btn-lg"><svg xmlns="http://www.w3.org/2000/svg" width="16"
                                            height="16" fill="currentColor" class="bi bi-pencil-square"
                                            viewBox="0 0 16 16">
                                            <path
                                                d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd"
                                                d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg></button>
                                </td>
                                <td><button onclick="dialogDeleteUser(`{{_id}}`)" class="btn btn-danger btn-lg"><svg
                                            xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path
                                                d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                            <path
                                                d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                        </svg></button></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                <div class="container mt-2">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Tên sản phẩm</th>
                                <th>Giá</th>
                                <th>Hình ảnh</th>
                                <th>Màu</th>
                                <th>Tên khách hàng</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr>
                                <td>{{_id}}</td>
                                <td>{{name}}</td>
                                <td>{{price}}</td>
                                <td>
                                    <img style="width: 50px; height: 50px;"
                                        src="data:{{img.contentType}};charset=utf-8;base64,{{img.data}}" alt="">
                                </td>
                                <td>{{color}}</td>
                                <td>{{name_user}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                <div class="container mt-2 ">
                    <div class="row">
                        <div class="col-sm-4"></div>
                        <img class="col-sm-4" style="width: 350px; height: 250px;"
                            src="data:{{user.avatar.contentType}};charset=utf-8;base64,{{user.avatar.data}}" />
                    </div>
                    <div class="row fw-bold">
                        <div class="col-sm-5"></div>
                        <div class="col-sm-6">{{user.fullName}}</div>
                    </div>
                    <div class="row fw-bold">
                        <div class="col-sm-5"></div>
                        <a href="/editprofile" style="width: 50px; margin-left: 45px;"
                            class="col-sm-2 border border-primary text-decoration-none text-dark ">Edit</a>

                    </div>
                    <div class="row fw-bold">
                        <div class="col-sm-5"></div>
                        <a href="/myProduct" style="width: 17%;"
                            class="col-sm-3  mt-2 border border-primary text-decoration-none text-dark ">Xem danh
                            sách
                            sản
                            phẩm</a>

                    </div>

                </div>
            </div>
        </div>


    </div>
    <script>
        const dialogNewUser = document.getElementById("dialogNewUser");
        const dialogDelete = document.getElementById("deleteUser");
        const dialogUpdateUser = document.getElementById("dialogUpdateUser");
        const inputEmail = document.getElementById("email");
        const inputFullname = document.getElementById("fullname");
        const selectRole = document.getElementById("role");
        const form_update = document.getElementById("form_update");
        var saveId;
        const newUser = () => {
            dialogNewUser.showModal();
        }
        const dialogDeleteUser = (id) => {
            saveId = id;
            dialogDelete.showModal();
        }
        const deleteUser = () => {
            location.href = "/api/deleteUser/" + saveId;
        }
        const updateUser = (id, email, fullname, role) => {
            form_update.action = '/api/updateUser/' + id;
            inputEmail.value = email;
            inputFullname.value = fullname;
            selectRole.value = role;
            dialogUpdateUser.showModal();
        }
    </script>
</body>

</html>